<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <rest key="testkit-rest-service-resources" path="/testkit-test" version="1.0">
        <description>Provides the REST resource for the backdoor plugin.</description>
    </rest>

    <component-import key="lifeCycleManager" interface="com.atlassian.sal.api.lifecycle.LifecycleManager"/>

    <component interface="com.atlassian.jira.testkit.plugin.InitialiseSystemProperties" key="initSystemProperties"
               name="Init System Properties" class="com.atlassian.jira.testkit.plugin.InitialiseSystemPropertiesImpl"
               public="true" system="true"/>

    <component-import key="eventPublisher" interface="com.atlassian.event.api.EventPublisher" />
    <component interface="com.atlassian.jira.testkit.plugin.EventWatcherImpl" key="eventWatcher"
               name="atlassian-event listing" class="com.atlassian.jira.testkit.plugin.EventWatcherImpl"/>

    <component key="workflowSchemeDataFactory"
               class="com.atlassian.jira.testkit.plugin.workflows.WorkflowSchemeDataFactoryImpl"
               interface="com.atlassian.jira.testkit.plugin.workflows.WorkflowSchemeDataFactory"
               public="true"/>

    <component key="auditingManagerAdapterFactory"
               class="com.atlassian.jira.testkit.plugin.auditing.AuditingManagerAdapterFactoryImpl"
               interface="com.atlassian.jira.testkit.plugin.auditing.AuditingManagerAdapterFactory"
               public="true"/>

    <component key="serviceManagerAdapterFactory"
               class="com.atlassian.jira.testkit.plugin.service.ServiceManagerAdapterFactoryImpl"
               interface="com.atlassian.jira.testkit.plugin.service.ServiceManagerAdapterFactory"
               public="true"/>

    <component key="fieldLayoutManagerAdapterFactory"
               class="com.atlassian.jira.testkit.plugin.issue.fields.layout.field.FieldLayoutManagerAdapterFactoryImpl"
               interface="com.atlassian.jira.testkit.plugin.issue.fields.layout.field.FieldLayoutManagerAdapterFactory"
               public="true"/>

    <component key="jiraVersionService"
               class="com.atlassian.pocketknife.internal.version.JiraVersionServiceImpl"
               interface="com.atlassian.pocketknife.api.version.JiraVersionService"
               public="true"/>

</atlassian-plugin>
